---
import { getCurrentUser } from '../lib/auth.js';

const user = await getCurrentUser(Astro.cookies);

if (!user) {
  return Astro.redirect('/login');
}

const isNikhil = user.role === 'nikhil';
const isNupur = user.role === 'nupur';
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Our Space - {user.display_name}</title>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Dancing+Script:wght@700&display=swap" rel="stylesheet">
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
    
    body {
      font-family: 'Inter', system-ui, sans-serif;
      background: linear-gradient(135deg, #fff1f2 0%, #fce7f3 50%, #fff1f2 100%);
      min-height: 100vh;
      padding: 20px;
    }
    
    .container {
      max-width: 600px;
      margin: 0 auto;
    }
    
    header {
      text-align: center;
      margin-bottom: 40px;
      padding-top: 20px;
    }
    
    h1 {
      font-family: 'Dancing Script', cursive;
      color: #be123c;
      font-size: 2.5rem;
      margin-bottom: 10px;
    }
    
    .subtitle {
      color: #9f1239;
      font-size: 1.1rem;
    }
    
    .menu-grid {
      display: grid;
      gap: 20px;
      margin-bottom: 30px;
    }
    
    .menu-item {
      background: white;
      border-radius: 20px;
      padding: 30px;
      box-shadow: 0 10px 30px rgba(190, 18, 60, 0.1);
      text-decoration: none;
      color: inherit;
      transition: all 0.3s ease;
      display: block;
    }
    
    .menu-item:hover {
      transform: translateY(-5px);
      box-shadow: 0 15px 40px rgba(190, 18, 60, 0.2);
    }
    
    .menu-item-icon {
      font-size: 3rem;
      margin-bottom: 15px;
      display: block;
    }
    
    .menu-item-title {
      font-size: 1.3rem;
      font-weight: 700;
      color: #be123c;
      margin-bottom: 8px;
    }
    
    .menu-item-desc {
      color: #6b7280;
      font-size: 0.95rem;
    }
    
    .logout-btn {
      display: block;
      width: 100%;
      padding: 14px;
      background: linear-gradient(135deg, #9f1239 0%, #881337 100%);
      color: white;
      border: none;
      border-radius: 12px;
      font-size: 1rem;
      font-weight: 600;
      cursor: pointer;
      transition: all 0.3s ease;
      text-align: center;
      text-decoration: none;
    }
    
    .logout-btn:hover {
      transform: translateY(-2px);
      box-shadow: 0 10px 25px rgba(159, 18, 57, 0.3);
    }
  </style>
</head>
<body>
  <div class="container">
    <header>
      <h1>Welcome, {user.display_name}! üíï</h1>
      <p class="subtitle">Our Space</p>
    </header>

    <div class="menu-grid">
      {isNupur && (
        <>
          <a href="/journal" class="menu-item">
            <span class="menu-item-icon">üìî</span>
            <div class="menu-item-title">My Journal</div>
            <div class="menu-item-desc">Write your thoughts, track your mood, share with Nikki</div>
          </a>

          <a href="/" class="menu-item">
            <span class="menu-item-icon">üéÇ</span>
            <div class="menu-item-title">Birthday Surprise</div>
            <div class="menu-item-desc">Revisit your special birthday gift from Nikki</div>
          </a>
        </>
      )}

      {isNikhil && (
        <>
          <a href="/dashboard" class="menu-item">
            <span class="menu-item-icon">üìä</span>
            <div class="menu-item-title">Dashboard</div>
            <div class="menu-item-desc">View Nupur's journal entries and send messages</div>
          </a>

          <a href="/" class="menu-item">
            <span class="menu-item-icon">üéÅ</span>
            <div class="menu-item-title">Birthday Site</div>
            <div class="menu-item-desc">View the birthday surprise you created</div>
          </a>
        </>
      )}
    </div>

    <form method="POST" action="/logout">
      <button type="submit" class="logout-btn">Logout</button>
    </form>
  </div>
</body>
</html>
